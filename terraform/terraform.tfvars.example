
# Example Terraform variables
# Copy this file to terraform.tfvars and customize the values

aws_region      = "us-east-1"
project_name    = "registry"
environment     = "dev"
collection_name = "registry-collection"

# Collection type: SEARCH, TIMESERIES, or VECTORSEARCH
collection_type = "SEARCH"

# Standby replicas: ENABLED or DISABLED
standby_replicas = "DISABLED"

# Allow public access (set to false for VPC-only access)
enable_public_access = false

# List of AWS principals (IAM users/roles) that can access the collection
# Example: ["arn:aws:iam::123456789012:user/admin", "arn:aws:iam::123456789012:role/MyRole"]
allowed_principals = []

# VPC IDs for private access (leave empty if using public access)
allowed_vpcs = []

# Common tags applied to all resources
common_tags = {
  Project     = "registry"
  Environment = "dev"
  ManagedBy   = "terraform"
  Owner       = "your-team"
}
